<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dai.dao.TokenMapper">

    <select id="findAllAccount" resultType="String">
        SELECT account
        FROM token
    </select>

    <select id="findToken" parameterType="String" resultType="String">
        SELECT token
        FROM token
        WHERE account = #{account}
    </select>
    <select id="findAccount" parameterType="String" resultType="String">
        SELECT account
        FROM token
        WHERE token = #{token}
    </select>
    <select id="findStartTime" parameterType="String" resultType="String">
        SELECT startTime
        FROM token
        WHERE token = #{token}
    </select>
    <select id="findTime" parameterType="String" resultType="String">
        SELECT "time"
        FROM token
        WHERE token = #{token}
    </select>
    <select id="findLogout" parameterType="String" resultType="String">
        SELECT logout
        FROM token
        WHERE token = #{token}
    </select>

    <insert id="insertTokenData" parameterType="com.dai.bean.Token" useGeneratedKeys="true">
        INSERT INTO token
        VALUES (#{account}, #{token}, #{startTime}, #{time}, #{logout})
    </insert>

    <update id="updateToken" parameterType="String">
        UPDATE table token
        SET token.token = #{token}, token.logout = #{logout}
        WHERE account = #{account}
    </update>
    <update id="updateLogout" parameterType="String">
        UPDATE table token
        SET token.logout = #{logout}
        WHERE account = #{account}
    </update>
</mapper>